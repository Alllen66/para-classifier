{
  "name": "para-file-classifier-electron",
  "version": "1.0.0",
  "description": "PARA智能文件分类工具 - 桌面版",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5002 && electron .\"",
    "dev:backend": "cd backend && python src/main.py",
    "dev:frontend": "cd renderer && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd renderer && npm run build",
    "build:backend": "python build_backend.py",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "clean": "rm -rf dist backend/dist renderer/dist"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "fix-path": "^4.0.0"
  },
  "build": {
    "appId": "com.para.file-classifier",
    "productName": "PARA文件分类工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/dist/**/*",
      "backend/dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/",
        "to": "backend/"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
} 